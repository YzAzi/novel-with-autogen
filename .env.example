# Backend
DB_PATH=/data/app.db
BACKEND_CORS_ORIGINS=http://localhost:3000

# LLM config (optional). If missing, backend falls back to MOCK_LLM=1.
MOCK_LLM=1
LLM_PROVIDER=openai_compatible
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7

# RAG (Hybrid: Chroma + SQLite FTS5)
CHROMA_PERSIST_DIR=data/chroma
EMBEDDINGS_PROVIDER=local_bge_m3
# 可以填 HuggingFace 模型名（例如 BAAI/bge-m3），也可以填本地路径（推荐离线：model/bge-m3）
BGE_M3_MODEL_NAME=model/bge-m3
RERANK_PROVIDER=local_bge
# 本地离线：model/bge-reranker-v2-m3
BGE_RERANK_MODEL_NAME=model/bge-reranker-v2-m3
RAG_DEVICE=cpu
RAG_MAX_CHUNK_CHARS=1400
RAG_OVERLAP_RATIO=0.2
RAG_TOP_K_V=10
RAG_TOP_K_KW=10

# 强制离线（可选）：避免 transformers/sentence-transformers 触网
HF_HUB_OFFLINE=1
TRANSFORMERS_OFFLINE=1

# Consistency critic
CRITIC_PROVIDER=mock
AUTO_REVISE=false

# Frontend
NEXT_PUBLIC_API_BASE=http://localhost:8000
